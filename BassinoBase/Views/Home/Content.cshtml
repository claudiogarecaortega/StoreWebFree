<div class="row">
    <div class="col-md-6">
        <div class="box box-default">
            <div class="box-header with-border">
                <i class="fa fa-warning"></i>
                <h3 class="box-title">Alertas</h3>
            </div><!-- /.box-header -->
            <div class="box-body">
                @{
                    foreach (var alert in ViewBag.Alerts)
                    {
                        
                        int va = alert.Importance;
                        switch (va)
                        {
                            case 1:
                            {
                                <div class="alert alert-danger alert-dismissable">
                                    <button type="button" onclick="alertRead(@alert.Id)" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                    <h4><i class="icon fa fa-ban"></i> @alert.Description</h4>
                                    @Html.Raw(alert.Html)
                                </div>
                                break;
                            }
                            case 2:
                            {
                                <div class="alert alert-info alert-dismissable">
                                    <button type="button" onclick="alertRead(@alert.Id)" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                    <h4><i class="icon fa fa-info"></i> @alert.Description</h4>
                                    @Html.Raw(alert.Html)
                                </div>
                                break;
                            }
                            case 3:
                            {
                                <div class="alert alert-warning alert-dismissable">
                                    <button type="button" onclick="alertRead(@alert.Id)" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                    <h4><i class="icon fa fa-warning"></i> @alert.Description</h4>
                                    @Html.Raw(alert.Html)
                                </div>
                                break;
                            }
                            case 4:
                            {
                                <div class="alert alert-success alert-dismissable">
                                    <button type="button" onclick="alertRead(@alert.Id)" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                    <h4> <i class="icon fa fa-check"></i> @alert.Description</h4>
                                    @Html.Raw(alert.Html)
                                </div>
                                break;
                            }

                        }

                    }
                }




            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div><!-- /.col -->
