@using BassinoLibrary.Helpers
@using BassinoLibrary.Resource
@using BassinoLibrary.ViewModels

@model BassinoLibrary.ViewModels.AlmacenViewModel

@{
    Layout = "~/Views/Shared/_ModalLayout.cshtml";
}

@section Header
{
    @Helpers.ModalHeader(string.Format("{0} {1}", Resources.Edit, "Almacen"))
}

<fieldset>

	@Html.ValidationSummary(true)

	@Html.HiddenFor(model => model.Id)
    @Html.PersonalSEditorFor(model => model.Nombre)
	@Html.PersonalTextAreaFor(model => model.Descripcion, "Descripcion", 3)
    
    @Html.PersonalSEditorFor(model => model.Calle)
    @Html.PersonalSEditorFor(model => model.Numero)
    @Html.PersonalSEditorFor(model => model.CodigoPostal)
    @(Html.AutocompleteFor<AlmacenViewModel, int?>(model => model.Ubicacion)
          .TextField<UbicationViewModel>(diag => diag.DescriptionCompleta)
          .ValueField<UbicationViewModel>(diag => diag.Id)
          .Id(model => model.UbicacionId)
          .Source("GetAutoComplete", "Ubication"))

</fieldset>

@section Footer
{
    @Helpers.BotonesGuardarCancelarModal()
}
