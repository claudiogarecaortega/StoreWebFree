@using BassinoLibrary.Helpers
@using BassinoLibrary.Resource
@using BassinoLibrary.ViewModels
@model BassinoLibrary.ViewModels.UbicationViewModel

@{
    Layout = "~/Views/Shared/_ModalLayout.cshtml";
}

@section Header
{
    @Helpers.ModalHeader(string.Format("{0} {1}", Resources.Edit, Resources.Ubication))
}

<fieldset>

	@Html.ValidationSummary(true)


	@Html.HiddenFor(model => model.Id)

	
	@Html.PersonalSEditorFor(model => model.Description)
    @(Html.AutocompleteFor<UbicationViewModel, int?>(model => model.UbicacionPadre)
          .TextField<UbicationViewModel>(diag => diag.DescriptionCompleta)
          .ValueField<UbicationViewModel>(diag => diag.Id)
          .Id(model => model.UbicacionPadreId)
          .Source("GetAutoComplete", "Ubication"))

</fieldset>

@section Footer
{
    @Helpers.BotonesGuardarCancelarModal()
}
