@using BassinoBase.Controllers
@using BassinoLibrary.Helpers
@using BassinoLibrary.Resource
@using Interfaz.Controllers
@using BassinoLibrary.ViewModels
@using Microsoft.Ajax.Utilities
@*Helpers.BotonCreateUrl("Client/Create", "Crear Cuenta", (bool)ViewBag.crear, (bool)ViewBag.imprimir, "Imprimir Todos las Cuentas", "Report/PrintAllClients")*@

<script>

    $(document).ready(function() {
        $("#filterText").keyup(function(e) {
            if (e.which == 13)
                RefrescarGrilla();
        });
        updateTitle("Cuentas","Gestion General");
    });
   
    function RefrescarGrilla() {
        $(".k-grid").each(function() {
            $(this).data("kendoGrid").dataSource.page(1);
            $(this).data("kendoGrid").dataSource.read();
        });
    }


</script>
@Helpers.Buscador()
@Helpers.BotonesAcctionClient((bool)ViewBag.crear, "Create", ViewBag.editar, ViewBag.borrar, ViewBag.ver, "Client", "Edit", ViewBag.contrato)
@(Html.KendoGrid().Grid<ClientViewModel, ClientController>(GridDetailsMode.None)
    .Name("GridClient")
    .Columns(columns =>
    {
        columns.Template(@<text></text>).Width(50).ClientTemplate("<input type='checkbox' onClick='disableOnCheckedClient(#= id #)' name='actions' class='chkbx' value='#= id #' id='#= id #'/>");
        columns.Bound(p => p.Secuencia).Template(@<text></text>).Title("N° de Cuenta").Width(100);
        columns.Bound(p => p.Name).Template(@<text></text>).Title("Razon Social");
        columns.Bound(p => p.Alias).Template(@<text></text>).Title("Alias");
        columns.Bound(p => p.NameContact);
        columns.Bound(p => p.PhoneContact);
        columns.Bound(p => p.MailContact);
       @*columns.Template(@<text></text>).HtmlAttributes(new { @class = "acciones" }).Width(300).ClientTemplate(@Html.Partial("_GridAcctions").ToString())
              .HtmlAttributes(new { @style = "overflow: visible;" });*@
	    })
            
    .DataSource(dataSource => dataSource
        .Ajax()
        .Model(conf => conf.Id(model => model.Id))
        .PageSize(20)
            .Read(read => read.Action("GridInfo", "Client").Data("additionalParameters"))
    )
)
