@using BassinoLibrary.Helpers
@using BassinoLibrary.Resource


@model BassinoLibrary.ViewModels.ClientViewModel

@{
    Layout = "~/Views/Shared/_ModalLayout.cshtml";
}

@section Header
{
    @Helpers.ModalHeader(string.Format("{0} {1}", Resources.Delete,  ViewBag.title ))
}

<fieldset>
    @Html.HiddenFor(model => model.Id)
    @Html.PersonalDisplayFor(model => model.Name)
    @if (Model.IsClientDestination)
    {
        @Html.PersonalDisplayFor(model => model.DeliveryDirection)
        @Html.PersonalDisplayFor(model => model.Neighborhood)
        @Html.PersonalDisplayFor(model => model.Localidad)
        @Html.PersonalDisplayFor(model => model.TimeToDelivery)
        @Html.PersonalDisplayFor(model => model.Ubication)
        @Html.PersonalDisplayFor(model => model.Sequence)
    }

    @Html.PersonalDisplayFor(model => model.Direction)
    @Html.PersonalDisplayFor(model => model.TaxCondition)
    @Html.PersonalDisplayFor(model => model.IiBb)
    @Html.PersonalDisplayFor(model => model.Cuit)
    @Html.PersonalDisplayFor(model => model.NameContact)
    @Html.PersonalDisplayFor(model => model.PhoneContact)
    @Html.PersonalDisplayFor(model => model.MailContact)
    @if (!Model.IsClientOrigen && !Model.IsClientDestination)
    {
        @Html.PersonalDisplayFor(model => model.ServicesesDescription)
        @Html.PersonalDisplayFor(model => model.MeasureUnit)
        @Html.PersonalDisplayFor(model => model.ServicePrice)
    }
    @Html.PersonalDisplayFor(model => model.Description)




				
</fieldset>

@section Footer
{
    @Helpers.BotonesBorrarCancelar()
}
