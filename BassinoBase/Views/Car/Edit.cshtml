@using BassinoLibrary.Helpers
@using BassinoLibrary.Resource

@model BassinoLibrary.ViewModels.CarViewModel

@{
    Layout = "~/Views/Shared/_ModalLayout.cshtml";
}

@section Header
{
    @Helpers.ModalHeader(string.Format("{0} {1}", Resources.Edit, "Vehiculo"))
}

<fieldset>

    @Html.ValidationSummary(true)

    @Html.HiddenFor(model => model.Id)
    @Html.PersonalSEditorFor(model => model.Nombre)
    @Html.PersonalSEditorFor(model => model.Description)
    @Html.PersonalSEditorFor(model => model.Patente)
    @Html.PersonalSEditorFor(model => model.UsoFisico)
    @Html.PersonalSEditorFor(model => model.KiloMaximo)
    @Html.PersonalSEditorFor(model => model.PalletMaximo)
    @Html.PersonalSEditorFor(model => model.Senasa)
    @Html.PersonalSEditorFor(model => model.Senada)
    @Html.PersonalSEditorFor(model => model.Seguro)
    @Html.PersonalSEditorFor(model => model.Poliza)
    @(Html.DateTimePicker(model => model.DueDate)
          .Label()
                  .SetID("DueDate")
          .ChangeMonth()
          .ChangeYear())
    @Html.PersonalSEditorFor(model => model.UrgenciPhone)
    @Html.PersonalSEditorFor(model => model.Itv)
    @(Html.DateTimePicker(model => model.DueDateItv)
          .Label()
                .SetID("DueDateItv")
          .ChangeMonth()
          .ChangeYear())
    @Html.PersonalSEditorFor(model => model.CarPhone)
</fieldset>

@section Footer
{
    @Helpers.BotonesGuardarCancelarModal()
}
