@using BassinoBase.Controllers
@using BassinoLibrary.Helpers
@using BassinoLibrary.Resource
@using Interfaz.Controllers
@using BassinoLibrary.ViewModels

@Helpers.BotonCreateUrl("TaxCondition/Create", "Crear Nueva Condicion IVA",true)

<script>

    $(document).ready(function() {
        $("#Buscar").keyup(function(e) {
            if (e.which == 13)
                RefrescarGrilla();
        });
        updateTitle("Condicion Iva", "Configuraciones");
    });

    function RefrescarGrilla() {
        $(".k-grid").each(function() {
            $(this).data("kendoGrid").dataSource.page(1);
            $(this).data("kendoGrid").dataSource.read();
        });
    }


</script>

@(Html.KendoGrid().Grid<TaxConditionViewModel, TaxConditionController>()
    .Name("GridTaxCondition")
    .Columns(columns =>
    {
			columns.Bound(p => p.Id);
			columns.Bound(p => p.Description);
	    })
	.EditarBorrar(true,true)
    .DataSource(dataSource => dataSource
        .Ajax()
        .Model(conf => conf.Id(model => model.Id))
        .PageSize(10)
        .Read(read => read.Action("GridInfo", "TaxCondition"))
    )
)
