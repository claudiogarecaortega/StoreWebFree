@using BassinoLibrary.Helpers
@using BassinoLibrary.Resource
@model BassinoLibrary.ViewModels.PedidosViewModel

@{
    Layout = "~/Views/Shared/_ModalLayout.cshtml";
    ViewBag.Action = "Create";
}

@section Header
{
    @Helpers.ModalHeader(string.Format("{0} {1}", Resources.Create, "Pedidos"))
}

<fieldset>

	@Html.ValidationSummary(true)
    <input type="hidden" name="UsuarioId" id="UsuarioId" value="@ViewBag.usuarioId">
	@Html.PersonalTextAreaFor(model => model.Descripcion,"Descripcion",3,true)
	@Html.PersonalSEditorFor(model => model.Referencia)

</fieldset>

@section Footer
{
    @Helpers.BotonesGuardarCancelarModal()
}
