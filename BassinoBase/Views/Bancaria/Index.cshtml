@using BassinoBase.Controllers
@using BassinoLibrary.Helpers

@using BassinoLibrary.ViewModels
@using BassinoLibrary.Helpers
@using BassinoLibrary.Resource

@using BassinoLibrary.ViewModels

<script>

    $(document).ready(function () {
        $("#filterText").keyup(function (e) {
            if (e.which == 13)
                RefrescarGrilla();
        });
        updateTitle("Datos Bancarios", "Gestion Contable");
    });

    function RefrescarGrilla() {
        $(".k-grid").each(function () {
            $(this).data("kendoGrid").dataSource.page(1);
            $(this).data("kendoGrid").dataSource.read();
        });
    }
   
</script>



@Helpers.Buscador()
@Helpers.BotonesActiones(true, true, true, true, "Bancaria")
@(Html.KendoGrid().Grid<BancariaViewModel, BancariaController>(GridDetailsMode.None)
    .Name("GridBancaria")
    .Columns(columns =>
    {
	columns.Template(@<text></text>).Width(50).ClientTemplate("<input type='checkbox' onClick='disableOnChecked(#= id #)' name='actions' class='chkbx' value='#= id #' id='#= id #'/>");
			columns.Bound(p => p.NumeroCuenta);
			columns.Bound(p => p.Alias);
			columns.Bound(p => p.Entidad);
			columns.Bound(p => p.Saldo);
	    })
	.DataSource(dataSource => dataSource
        .Ajax()
        .Model(conf => conf.Id(model => model.Id))
        .PageSize(10)
        .Read(read => read.Action("GridInfo", "Bancaria").Data("additionalParameters"))
    )
)
