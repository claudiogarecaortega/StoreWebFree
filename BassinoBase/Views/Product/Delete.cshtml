@using BassinoLibrary.Helpers
@using BassinoLibrary.Resource

@model BassinoLibrary.ViewModels.ProductViewModel

@{
    Layout = "~/Views/Shared/_ModalLayout.cshtml";
}

@section Header
{
    @Helpers.ModalHeader(string.Format("{0} {1}", Resources.Delete, Resources.Product))
}

<fieldset>

	@Html.HiddenFor(model => model.Id)
				
    @Html.PersonalDisplayFor(model => model.Nombre)
    @Html.PersonalDisplayFor(model => model.Description)
    @Html.PersonalDisplayFor(model => model.Precio)

    @Html.PersonalDisplayFor(model => model.Categorias)
    @Html.PersonalDisplayFor(model => model.Etiquetas)
    @Html.LabelFor(model => model.IsPrincipal)
    
</fieldset>

@section Footer
{
    @Helpers.BotonesBorrarCancelar()
}
