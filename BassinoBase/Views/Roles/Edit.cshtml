@using BassinoLibrary.Helpers
@using BassinoLibrary.Resource
@model BassinoLibrary.ViewModels.RolesViewModel

@{
    Layout = "~/Views/Shared/_ModalLayout.cshtml";
}

@section Header
{
    @Helpers.ModalHeader(string.Format("{0} {1}", Resources.Edit, Resources.Roles))
}

<fieldset>

	@Html.ValidationSummary(true)

	@Html.HiddenFor(model => model.Id)

	@Html.PersonalSEditorFor(model => model.Name)
	@Html.PersonalSEditorFor(model => model.Description)

</fieldset>

@section Footer
{
    @Helpers.BotonesGuardarCancelarModal()
}
